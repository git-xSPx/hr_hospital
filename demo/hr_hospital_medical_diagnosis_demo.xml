        </record>

<record id="diag_5" model="hr.hospital.medical.diagnosis">
            <field name="visit_id" ref="visit_1"/>
            <field name="disease_id" ref="disease_covid19"/>
            <field name="severity">critical</field>
            <field name="description">Complications after the main illness.</field>
            <field name="treatment"><![CDATA[<p>Intensive care and isolation.</p>]]></field>
            <field name="is_approved" eval="True"/>
