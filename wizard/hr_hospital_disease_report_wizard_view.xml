<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_hospital_disease_report_wizard_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.report.wizard.form</field>
        <field name="model">hr.hospital.disease.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Disease Report">
                <group>
                    <group string="Period">
                        <field name="date_start"
                               string="Period"
                               widget="daterange"
                               options="{'end_date_field': 'date_end', 'always_range': '1'}"
                               reqvired="date_start or date_end"
                        />
                        <field name="date_end" invisible="1" reqvired="date_start"/>
                    </group>
                    <group string="Display Options">
                        <field name="report_type" widget="radio"/>
                        <field name="group_by"/>
                    </group>
                </group>
                <notebook>
                    <page string="Filters">
                        <group>
                            <field name="doctor_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="disease_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="country_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_disease_report_wizard" model="ir.actions.act_window">
        <field name="name">Disease Report</field>
        <field name="res_model">hr.hospital.disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_view_types">list,form</field>
        <field name="binding_type">report</field>
    </record>

</odoo>