<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_hospital_disease_list" model="ir.ui.view">
        <field name="name">hr.hospital.disease.list</field> <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <list string="Diseases" expand="1">
                <field name="complete_name"/>
                <field name="icd10_code"/>
                <field name="danger_level" widget="badge"
                       decoration-danger="danger_level == 'critical'"
                       decoration-warning="danger_level == 'high'"
                       decoration-info="danger_level == 'medium'"/>
                <field name="is_contagious" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_disease_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.form</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <form string="Disease Details">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Type 2 Diabetes"/></h1>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="icd10_code"/>
                            <field name="danger_level"/>
                        </group>
                        <group string="Status">
                            <field name="is_contagious"/>
                            <field name="country_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clinical Description" name="description">
                            <field name="symptoms" placeholder="Describe symptoms and clinical signs..."/>
                        </page>
                        <page string="Hierarchy &amp; Sub-diseases" name="sub_diseases">
                            <field name="child_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="icd10_code"/>
                                    <field name="danger_level"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_disease_search" model="ir.ui.view">
        <field name="name">hr.hospital.disease.search</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <search string="Search Diseases">
                <field name="name" string="Disease or ICD Code"
                       filter_domain="['|', ('name', 'ilike', self), ('icd10_code', 'ilike', self)]"/>
                <field name="icd10_code"/>
                <field name="danger_level"/>

                <separator/>
                <filter string="Contagious" name="contagious" domain="[('is_contagious', '=', True)]"/>
                <filter string="Critical Danger" name="critical" domain="[('danger_level', '=', 'critical')]"/>

                <group>
                    <filter string="Danger Level" name="group_danger" context="{'group_by': 'danger_level'}"/>
                </group>

                <searchpanel>
                    <field name="parent_id" icon="fa-folder" enable_counters="1" string="Categories"/>
                </searchpanel>

            </search>
        </field>
    </record>

    <record id="action_hr_hospital_disease" model="ir.actions.act_window">
        <field name="name">Diseases (ICD-10)</field>
        <field name="res_model">hr.hospital.disease</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_disease_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new disease to the registry
            </p>
            <p>
                Maintain a structured list of diseases, symptoms, and ICD-10 codes.
                You can organize them into categories for better navigation.
            </p>
        </field>
    </record>

</odoo>