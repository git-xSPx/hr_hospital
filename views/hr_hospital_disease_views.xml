<odoo>

    <record id="hr_hospital_disease_view_list" model="ir.ui.view">
        <field name="name">hr.hospital.disease.view.list</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <list string="Diseases">
                <field name="active"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_disease_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.view.form</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <form string="Diseases">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Description of disease">
                            <field name="description" placeholder="Write here description of disease..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_action" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr.hospital.disease</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>