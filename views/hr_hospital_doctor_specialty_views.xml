<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_hospital_doctor_specialty_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.specialty.list</field>
        <field name="model">hr.hospital.doctor.specialty</field>
        <field name="arch" type="xml">
            <list string="Doctor Specialties">
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_specialty_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.specialty.form</field>
        <field name="model">hr.hospital.doctor.specialty</field>
        <field name="arch" type="xml">
            <form string="Doctor Specialty">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Cardiology"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter specialty details here..."/>
                        </page>
                        <page string="Assigned Doctors" name="doctors">
                            <field name="doctor_ids" readonly="1">
                                <list>
                                    <field name="full_name"/>
                                    <field name="phone"/>
                                    <field name="is_intern"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_specialty" model="ir.actions.act_window">
        <field name="name">Doctor Specialties</field>
        <field name="res_model">hr.hospital.doctor.specialty</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first doctor specialty
            </p>
        </field>
    </record>

</odoo>