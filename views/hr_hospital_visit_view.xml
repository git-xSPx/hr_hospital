<odoo>

    <record id="hr_hospital_visit_view_list" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.list</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <list string="Visits" decoration-info="visit_date">
                <field name="visit_date"/>
                <field name="res_partner_patient_id"/>
                <field name="res_partner_doctor_id"/>
                <field name="hr_hospital_disease_id"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_visit_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form string="Visits">
                <sheet>
                    <group>
                        <group string="Main info">
                            <field name="visit_date"/>
                            <field name="res_partner_patient_id"
                                domain="[('is_hrh_patient', '=', True)]"
                                options="{'no_quick_create': True}"/>
                        </group>
                        <group string="Disease">
                            <field name="hr_hospital_disease_id" options="{'no_create': True}"/>
                            <field name="res_partner_doctor_id"
                                   domain="[('is_hrh_doctor', '=', True)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description and recommendation">
                            <field name="description" placeholder="Write here doctor recommendation..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first patient visit!
            </p>
        </field>
    </record>

</odoo>