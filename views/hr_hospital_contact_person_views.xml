<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_hospital_contact_person_list" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.list</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <list string="Contact Persons">
                <field name="display_name" string="Full Name"/>
                <field name="relationship"/>
                <field name="patient_id"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_contact_person_form" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.form</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <form string="Contact Person">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="first_name" string="Name"/>
                        <h1>
                            <div class="o_row">
                                <field name="last_name" placeholder="Last Name" class="oe_inline"/>
                                <field name="first_name" placeholder="First Name" class="oe_inline"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Relationship Info">
                            <field name="patient_id" options="{'no_create': True}"/>
                            <field name="relationship" placeholder="e.g. Spouse, Father, Guardian"/>
                        </group>
                        <group string="Contact Details">
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Additional Information" name="additional">
                            <group>
                                <field name="gender"/>
                                <field name="birthday"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_contact_person_search" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.search</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <search string="Search Contact Persons">
                <field name="last_name" string="Name or Patient"
                       filter_domain="['|', '|', ('last_name', 'ilike', self), ('first_name', 'ilike', self), ('patient_id.name', 'ilike', self)]"/>
                <field name="patient_id"/>
<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Patient" name="group_by_patient" context="{'group_by': 'patient_id'}"/>-->
<!--                    <filter string="Relationship" name="group_by_rel" context="{'group_by': 'relationship'}"/>-->
<!--                </group>-->
            </search>
        </field> </record>

    <record id="action_hr_hospital_contact_person" model="ir.actions.act_window">
        <field name="name">Contact Persons</field>
        <field name="res_model">hr.hospital.contact.person</field>
        <field name="view_mode">list,form</field> <field name="help" type="html">
        <field name="search_view_id" ref="view_hr_hospital_contact_person_search"/>
            <p class="o_view_nocontent_smiling_face">
                Register a new contact person for a patient.
            </p>
        </field>
    </record>

</odoo>