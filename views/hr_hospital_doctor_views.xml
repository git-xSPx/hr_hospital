<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="display_name"/>
                <field name="specialty_id"/>
                <field name="license_number"/>
                <field name="is_intern" widget="boolean_toggle"/>
                <field name="rating"/>
                <field name="experience"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <div class="oe_stat_info">
                            <span class="o_stat_text">Rating</span>
                            <field name="rating" class="oe_stat_value"/>
                        </div>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>

                    <div class="oe_title">
                        <label for="first_name" string="Doctor Name"/>
                        <h1>
                            <div class="o_row">
                                <field name="last_name" placeholder="Last Name" class="oe_inline"/>
                                <field name="first_name" placeholder="First Name" class="oe_inline"/>
                            </div>
                        </h1>
                        <field name="middle_name" placeholder="Middle Name"/>
                    </div>

                    <group>
                        <group string="Professional Details">
                            <field name="specialty_id" options="{'no_create': True}"/>
                            <field name="license_number"/>
                            <field name="license_date"/>
                            <field name="experience"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Status &amp; Mentorship">
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   invisible="not is_intern"
                                   required="is_intern"
                                   options="{'no_create': True}"/>
                            <field name="education_country_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contact &amp; Personal" name="personal">
                            <group>
                                <group>
                                    <field name="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="birthday"/>
                                        <field name="age"/>
                                        <field name="gender"/>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Schedule" name="schedule">
                            <field name="schedule_ids">
                                <list editable="bottom">
                                    <field name="work_date"/>
                                    <field name="hour_from" widget="float_time"/>
                                    <field name="hour_to" widget="float_time"/>
                                    <field name="schedule_type"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Search Doctors">
                <field name="last_name" string="Doctor Name"
                       filter_domain="['|', ('last_name', 'ilike', self), ('first_name', 'ilike', self)]"/>
                <field name="specialty_id"/>
                <field name="license_number"/>
                <field name="is_intern"/>

                <separator/>
                <filter string="Interns" name="interns" domain="[('is_intern', '=', True)]"/>
                <filter string="Fully Licensed" name="licensed" domain="[('is_intern', '=', False)]"/>
                <filter string="High Rating" name="high_rating" domain="[('rating', '>=', 4.0)]"/>

<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Specialty" name="group_specialty" context="{'group_by': 'specialty_id'}"/>-->
<!--                    <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_doctor_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first doctor
            </p>
            <p>
                Manage medical staff, their specialties, licenses, and mentorship programs for interns.
            </p>
        </field>
    </record>

</odoo>