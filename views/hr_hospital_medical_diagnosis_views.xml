<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_hospital_medical_diagnosis_list" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.list</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <list string="Medical Diagnoses"
                  decoration-danger="severity == 'critical'"
                  decoration-warning="severity == 'severe'"
                  decoration-muted="not is_approved">
                <field name="visit_id"/>
                <field name="disease_id"/>
                <field name="severity" widget="badge"
                       decoration-danger="severity == 'critical'"
                       decoration-warning="severity == 'severe'"
                       decoration-info="severity == 'medium'"/>
                <field name="is_approved" widget="boolean_toggle"/>
                <field name="approved_doctor_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_medical_diagnosis_form" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.form</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <form string="Medical Diagnosis">
                <sheet>
                    <widget name="web_ribbon" title="Approved" bg_color="text-bg-success" invisible="not is_approved"/>

                    <div class="oe_title">
                        <label for="disease_id"/>
                        <h1><field name="disease_id" options="{'no_create': True}"/></h1>
                    </div>

                    <group>
                        <group string="Visit Context">
                            <field name="visit_id" options="{'no_create': True}"/>
                            <field name="severity"/>
                        </group>
                        <group string="Verification">
                            <field name="is_approved"/>
                            <field name="approved_doctor_id" invisible="not is_approved"/>
                            <field name="approval_date" invisible="not is_approved"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Clinical Notes" name="notes">
                            <group>
                                <field name="description" placeholder="Describe the clinical picture..."/>
                            </group>
                        </page>
                        <page string="Treatment Plan" name="treatment">
                            <field name="treatment" widget="html" placeholder="Prescribed medications and procedures..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_medical_diagnosis_search" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.search</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <search string="Search Diagnoses">
                <field name="disease_id"/>
                <field name="visit_id"/>
                <field name="severity"/>
                <field name="approved_doctor_id"/>

                <separator/>
                <filter string="Needs Approval" name="to_approve" domain="[('is_approved', '=', False)]"/>
                <filter string="Critical Cases" name="critical" domain="[('severity', '=', 'critical')]"/>

<!--                <group expand="0" string="Group By">-->
<!--                    <filter string="Disease" name="group_disease" context="{'group_by': 'disease_id'}"/>-->
<!--                    <filter string="Severity" name="group_severity" context="{'group_by': 'severity'}"/>-->
<!--                    <filter string="Visit" name="group_visit" context="{'group_by': 'visit_id'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_medical_diagnosis" model="ir.actions.act_window">
        <field name="name">Medical Diagnoses</field>
        <field name="res_model">hr.hospital.medical.diagnosis</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_medical_diagnosis_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No diagnoses recorded yet
            </p>
            <p>
                Diagnoses are usually created during a patient visit.
                Mentors can use this view to review and approve intern conclusions.
            </p>
        </field>
    </record>

</odoo>